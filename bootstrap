# The human mind is too tiny to comprehend the horrors of humanity 
cat > ${RD}/.tbash.tmp << EOL
RD=${RD}
alias 1="cd ${RD}/homeworks/HW01"
alias 2="cd ${RD}/homeworks/HW02"
alias 3="cd ${RD}/homeworks/HW03"
alias 4="cd ${RD}/homeworks/HW04"
