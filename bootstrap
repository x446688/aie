alias 9="cd ${RD}/homeworks/HW09"
alias 10="cd ${RD}/homeworks/HW10"
alias 11="cd ${RD}/homeworks/HW11"
alias 12="cd ${RD}/homeworks/HW12"
alias 13="cd ${RD}/homeworks/HW13"
alias 14="cd ${RD}/homeworks/HW14"
alias 15="cd ${RD}/homeworks/HW15"
alias 16="cd ${RD}/homeworks/HW16"
alias 17="cd ${RD}/homeworks/HW17"
alias 18="cd ${RD}/homeworks/HW18"
alias 19="cd ${RD}/homeworks/HW19"
alias 20="cd ${RD}/homeworks/HW20"
